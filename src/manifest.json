{
    "name": "Big Search",
    "description": "Handily use any One or Multiple search engines via a Flexible tool",
    "manifest_version": 2,
    "version": "2.3.3",
    "homepage_url": "https://garywill.github.io",
    "developer": {
        "name": "Garywill",
        "url": "https://github.com/garywill/BigSearch"
    },
    "permissions": [
        "storage",
        "contextMenus"
    ],
    "optional_permissions": [
        "search",
        "clipboardRead",
        "*://*/*"
    ],
    "icons": {
        "128": "icon.png"
    },
 
    "browser_action": {
        "default_icon": "icon_button.png",
        "default_title": "Big Search",
        "default_popup": "addon-popup.html"
    },
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{45a03d78-2183-4d73-afe4-cfda260d1308}"
        }
    }
} 
